
# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Set name of the theme to load --- if set to "random", it will
# load a random theme each time oh-my-zsh is loaded, in which case,
# to know which specific one was loaded, run: echo $RANDOM_THEME
# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="robbyrussell"

plugins=(git brew docker docker-compose golang helm httpie kubectl macos pip python terraform fzf)

# Uncomment the following line to use case-sensitive completion.
# CASE_SENSITIVE="true"

zstyle ':omz:update' mode auto      # update automatically without asking

# Uncomment the following line if pasting URLs and other text is messed up.
# DISABLE_MAGIC_FUNCTIONS="true"

# Uncomment the following line to display red dots whilst waiting for completion.
# You can also set it to another string to have that shown instead of the default red dots.
# e.g. COMPLETION_WAITING_DOTS="%F{yellow}waiting...%f"
# Caution: this setting can cause issues with multiline prompts in zsh < 5.7.1 (see #5765)
# COMPLETION_WAITING_DOTS="true"

# Uncomment the following line if you want to disable marking untracked files
# under VCS as dirty. This makes repository status check for large repositories
# much, much faster.
# DISABLE_UNTRACKED_FILES_DIRTY="true"

# Uncomment the following line if you want to change the command execution time
# stamp shown in the history command output.
# You can set one of the optional three formats:
# "mm/dd/yyyy"|"dd.mm.yyyy"|"yyyy-mm-dd"
# or set a custom format using the strftime function format specifications,
# see 'man strftime' for details.
# HIST_STAMPS="mm/dd/yyyy"

source $ZSH/oh-my-zsh.sh

export HISTFILE=~/.zsh_history
export SAVEHIST=100000000000000
export HISTSIZE=100000000000000
setopt EXTENDED_HISTORY
setopt INC_APPEND_HISTORY
setopt HIST_FIND_NO_DUPS
setopt HIST_IGNORE_DUPS
setopt SHARE_HISTORY
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_SAVE_NO_DUPS

# export MANPATH="/usr/local/man:$MANPATH"

{{- if eq .chezmoi.os "darwin" }}
alias sb="cd {{ .chezmoi.homeDir }}/Library/Mobile\ Documents/iCloud~md~obsidian/Documents"
{{- end }}

####################################################################
# ZPlug config
{{- if eq .chezmoi.os "darwin" }}
export ZPLUG_HOME=/opt/homebrew/opt/zplug
{{- else }}
export ZPLUG_HOME=/usr/local/opt/zplug
{{- end }}
source $ZPLUG_HOME/init.zsh

# ZPlug plugins list:
zplug "MichaelAquilina/zsh-you-should-use"
zplug "automaat/zsh-clean-history", from:github, at:main


if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

# Then, source plugins and add commands to $PATH
zplug load
####################################################################
# FZF config
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

####################################################################
# pyenv
export PYENV_ROOT="$HOME/.pyenv"
command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

####################################################################
# PATH configuration
export PATH="$HOME/bin:$PATH"
{{- if stat (joinPath .chezmoi.homeDir ".kuma-dev/kuma-master/bin") }}
export PATH="{{ .chezmoi.homeDir }}/.kuma-dev/kuma-master/bin:$PATH"
{{- end }}
export PATH="/opt/homebrew/opt/ruby/bin:$PATH"
export PATH="$PATH:$HOME/go/bin"
export PATH="$PATH:$HOME/.local/bin"

####################################################################
# autojump
[ -f /opt/homebrew/etc/profile.d/autojump.sh ] && . /opt/homebrew/etc/profile.d/autojump.sh

####################################################################
# zsh-autosuggestions
source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh

####################################################################
# zsh-syntax-highlighting
source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

####################################################################
# starship
# eval "$(starship init zsh)"

####################################################################
# useful aliases
{{- if stat (joinPath .chezmoi.homeDir "kong") }}
alias sync-kuma="gh repo sync automaat/kuma -b master"
alias sync-kuma-website="gh repo sync automaat/kuma-website -b master"
alias awsk="aws --profile saml --region us-west-1"
alias kol="bash {{ .chezmoi.homeDir }}/kong/konnect-on-call-tool-kit/cli/kolsch.sh"
alias kctl="{{ .chezmoi.homeDir }}/kong/mesh/kuma/build/artifacts-darwin-arm64/kumactl/kumactl"
export GOPRIVATE=github.com/Kong/*
{{- end }}

# opam configuration
[[ ! -r {{ .chezmoi.homeDir }}/.opam/opam-init/init.zsh ]] || source {{ .chezmoi.homeDir }}/.opam/opam-init/init.zsh  > /dev/null 2> /dev/null

eval "$(saml2aws --completion-script-zsh)"
eval "$(rbenv init - zsh)"

alias cs="carousel-splitter"

{{- if stat (joinPath .chezmoi.homeDir ".antigravity/antigravity/bin") }}
# Added by Antigravity
export PATH="{{ .chezmoi.homeDir }}/.antigravity/antigravity/bin:$PATH"
{{- end }}

eval "$(mise activate zsh)"
export MISE_AUTO_INSTALL=1
